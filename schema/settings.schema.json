{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Hole Settings",
  "description": "Configuration for the Hole AI agent sandbox",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference for IDE autocompletion"
    },
    "files": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "exclude": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        }
      }
    },
    "network": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "domainWhitelist": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        }
      }
    }
  }
}
